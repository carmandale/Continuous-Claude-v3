{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://continuous-claude.dev/schemas/artifact-v1.json",
  "title": "Unified Artifact Schema",
  "description": "Schema for checkpoint, handoff, and finalize artifacts (YAML frontmatter + YAML body)",
  "type": "object",
  "required": ["schema_version", "mode", "date", "session", "goal", "now", "outcome"],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Schema version for format evolution",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["1.0.0"]
    },
    "mode": {
      "type": "string",
      "description": "Artifact mode",
      "enum": ["checkpoint", "handoff", "finalize"]
    },
    "date": {
      "type": "string",
      "description": "ISO 8601 date or date-time",
      "anyOf": [
        { "format": "date" },
        { "format": "date-time" }
      ]
    },
    "session": {
      "type": "string",
      "description": "Session folder name (bead + slug)"
    },
    "outcome": {
      "type": "string",
      "description": "Session outcome classification",
      "enum": ["SUCCEEDED", "PARTIAL_PLUS", "PARTIAL_MINUS", "FAILED"]
    },
    "primary_bead": {
      "type": "string",
      "description": "Primary bead identifier (required for handoff/finalize)"
    },
    "related_beads": {
      "type": "array",
      "items": { "type": "string" }
    },
    "session_id": {
      "type": "string",
      "description": "Unique session identifier"
    },
    "agent_id": {
      "type": "string",
      "description": "Agent identifier"
    },
    "root_span_id": {
      "type": "string",
      "description": "Braintrust root span identifier"
    },
    "turn_span_id": {
      "type": "string",
      "description": "Braintrust turn span identifier"
    },
    "goal": {
      "type": "string",
      "description": "One-liner success criteria",
      "minLength": 1
    },
    "now": {
      "type": "string",
      "description": "Current focus (one thing)",
      "minLength": 1
    },
    "done_this_session": {
      "type": "array",
      "description": "Tasks completed this session",
      "items": {
        "type": "object",
        "required": ["task", "files"],
        "properties": {
          "task": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "next": {
      "type": "array",
      "description": "Next priorities",
      "items": { "type": "string" }
    },
    "blockers": {
      "type": "array",
      "description": "Current blockers",
      "items": { "type": "string" }
    },
    "questions": {
      "type": "array",
      "description": "Open questions",
      "items": { "type": "string" }
    },
    "decisions": {
      "description": "Decisions made with rationale",
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["decision"],
            "properties": {
              "decision": { "type": "string" },
              "rationale": { "type": "string" },
              "alternatives_considered": {
                "type": "array",
                "items": { "type": "string" }
              },
              "why_this": { "type": "string" }
            }
          }
        }
      ]
    },
    "findings": {
      "type": "object",
      "description": "Key findings and insights",
      "additionalProperties": { "type": "string" }
    },
    "worked": {
      "type": "array",
      "description": "What worked well",
      "items": { "type": "string" }
    },
    "failed": {
      "type": "array",
      "description": "What didn't work and why",
      "items": { "type": "string" }
    },
    "git": {
      "type": "object",
      "description": "Git metadata",
      "required": ["branch", "commit"],
      "properties": {
        "branch": { "type": "string" },
        "commit": { "type": "string" },
        "remote": { "type": "string" },
        "pr_ready": { "type": "string", "format": "uri" }
      }
    },
    "files": {
      "type": "object",
      "description": "Files modified in session",
      "properties": {
        "created": { "type": "array", "items": { "type": "string" } },
        "modified": { "type": "array", "items": { "type": "string" } },
        "deleted": { "type": "array", "items": { "type": "string" } }
      }
    },
    "test": {
      "type": "string",
      "description": "Test command to verify session state"
    },
    "files_to_review": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": { "type": "string" },
          "note": { "type": "string" }
        }
      }
    },
    "continuation_prompt": {
      "type": "string"
    },
    "final_solutions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["problem", "solution", "rationale"],
        "properties": {
          "problem": { "type": "string" },
          "solution": { "type": "string" },
          "rationale": { "type": "string" }
        }
      }
    },
    "final_decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["decision"],
        "properties": {
          "decision": { "type": "string" },
          "rationale": { "type": "string" },
          "alternatives_considered": {
            "type": "array",
            "items": { "type": "string" }
          },
          "why_this": { "type": "string" }
        }
      }
    },
    "artifacts_produced": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": { "type": "string" },
          "note": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Extensible metadata for future fields",
      "additionalProperties": true
    }
  },
  "allOf": [
    {
      "if": { "properties": { "mode": { "const": "handoff" } } },
      "then": { "required": ["primary_bead"] }
    },
    {
      "if": { "properties": { "mode": { "const": "finalize" } } },
      "then": { "required": ["primary_bead"] }
    }
  ],
  "additionalProperties": true
}
