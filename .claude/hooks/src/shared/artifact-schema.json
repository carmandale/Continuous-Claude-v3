{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://continuous-claude.dev/schemas/artifact-v1.json",
  "title": "Unified Artifact Schema",
  "description": "Schema for checkpoint, handoff, and finalize artifacts",
  "type": "object",
  "required": ["schema_version", "event_type", "timestamp", "goal", "now", "outcome"],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Schema version for format evolution",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["1.0.0"]
    },
    "event_type": {
      "type": "string",
      "description": "Type of artifact event",
      "enum": ["checkpoint", "handoff", "finalize"]
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of artifact creation",
      "format": "date-time"
    },
    "session_id": {
      "type": "string",
      "description": "Unique session identifier"
    },
    "session_name": {
      "type": "string",
      "description": "Human-readable session name"
    },
    "goal": {
      "type": "string",
      "description": "One-liner success criteria",
      "minLength": 1
    },
    "now": {
      "type": "string",
      "description": "Current focus (one thing)",
      "minLength": 1
    },
    "outcome": {
      "type": "string",
      "description": "Session outcome classification",
      "enum": ["SUCCEEDED", "PARTIAL_PLUS", "PARTIAL_MINUS", "FAILED"]
    },
    "this_session": {
      "type": "array",
      "description": "Tasks completed this session",
      "items": {
        "type": "object",
        "required": ["task", "files"],
        "properties": {
          "task": {
            "type": "string",
            "description": "Task description"
          },
          "files": {
            "type": "array",
            "description": "Files modified for this task",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "next": {
      "type": "array",
      "description": "Next priorities",
      "items": {
        "type": "string"
      }
    },
    "blockers": {
      "type": "array",
      "description": "Current blockers",
      "items": {
        "type": "string"
      }
    },
    "questions": {
      "type": "array",
      "description": "Open questions",
      "items": {
        "type": "string"
      }
    },
    "decisions": {
      "description": "Decisions made with rationale",
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["decision"],
            "properties": {
              "decision": {
                "type": "string"
              },
              "rationale": {
                "type": "string"
              },
              "alternatives_considered": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "why_this": {
                "type": "string"
              }
            }
          }
        }
      ]
    },
    "learnings": {
      "type": "object",
      "description": "Session learnings",
      "properties": {
        "worked": {
          "type": "array",
          "description": "What worked well",
          "items": {
            "type": "string"
          }
        },
        "failed": {
          "type": "array",
          "description": "What didn't work and why",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "findings": {
      "type": "object",
      "description": "Key findings and insights",
      "additionalProperties": {
        "type": "string"
      }
    },
    "git": {
      "type": "object",
      "description": "Git metadata",
      "required": ["branch", "commit"],
      "properties": {
        "branch": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        },
        "remote": {
          "type": "string"
        },
        "pr_ready": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "files": {
      "type": "object",
      "description": "Files modified in session",
      "properties": {
        "created": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "modified": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deleted": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "test": {
      "type": "string",
      "description": "Test command to verify session state"
    },
    "metadata": {
      "type": "object",
      "description": "Extensible metadata for future use",
      "additionalProperties": true
    },
    "primary_bead": {
      "type": "string",
      "description": "Primary bead ID (required for handoff/finalize)"
    },
    "related_beads": {
      "type": "array",
      "description": "Related bead IDs",
      "items": {
        "type": "string"
      }
    },
    "files_to_review": {
      "type": "array",
      "description": "Files for reviewer to examine (handoff)",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": {
            "type": "string"
          },
          "note": {
            "type": "string"
          }
        }
      }
    },
    "continuation_prompt": {
      "type": "string",
      "description": "Instructions for continuing work (handoff)"
    },
    "final_solutions": {
      "type": "array",
      "description": "Final problem/solution pairs (finalize)",
      "items": {
        "type": "object",
        "required": ["problem", "solution", "rationale"],
        "properties": {
          "problem": {
            "type": "string"
          },
          "solution": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          }
        }
      }
    },
    "final_decisions": {
      "type": "array",
      "description": "Final architectural decisions (finalize)",
      "items": {
        "type": "object",
        "required": ["decision"],
        "properties": {
          "decision": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          },
          "alternatives_considered": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "why_this": {
            "type": "string"
          }
        }
      }
    },
    "artifacts_produced": {
      "type": "array",
      "description": "Final artifacts produced (finalize)",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": {
            "type": "string"
          },
          "note": {
            "type": "string"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "event_type": {
            "enum": ["handoff", "finalize"]
          }
        }
      },
      "then": {
        "required": ["primary_bead"]
      }
    }
  ]
}
